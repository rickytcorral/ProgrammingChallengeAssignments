import java.util.Scanner;

public class NumberPattern {

   public static void main(String[] args) {
      Scanner scanner = new Scanner(System.in);
      System.out.print("Enter an integer: ");
      int num = scanner.nextInt();
      scanner.close();

      for (int i = 1; i <= num; i++) {
         for (int j = 1; j <= i; j++) {
            System.out.print(j + " ");
         }
         System.out.println();
      }
   }
}
